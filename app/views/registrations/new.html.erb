<div class="row justify-content-center">
  <div class="col-md-5 col-lg-4">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h1 class="h3 text-center mb-4">
          <i class="bi bi-person-plus"></i> 新規登録
        </h1>

        <%= form_with model: @user, url: registration_path, local: true, class: "needs-validation", novalidate: true do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "ユーザー名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control #{'is-invalid' if @user.errors[:name].any?}", placeholder: "山田太郎", autofocus: true, required: true %>
            <div class="invalid-feedback">
              ユーザー名を入力してください
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <%= f.email_field :email, class: "form-control #{'is-invalid' if @user.errors[:email].any?}", placeholder: "example@mail.com", required: true %>
            <div class="invalid-feedback">
              <%= @user.errors[:email].first || "メールアドレスを入力してください" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, class: "form-control #{'is-invalid' if @user.errors[:password].any?}", placeholder: "6文字以上", required: true, minlength: 6 %>
            <div class="invalid-feedback">
              <%= @user.errors[:password].first || "パスワードは6文字以上で入力してください" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control #{'is-invalid' if @user.errors[:password_confirmation].any?}", placeholder: "パスワードを再入力", required: true %>
            <div class="invalid-feedback">
              <%= @user.errors[:password_confirmation].first || "パスワードを確認してください" %>
            </div>
          </div>

          <div class="d-grid mb-3">
            <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="text-center">
          <p class="text-muted mb-0">
            既にアカウントをお持ちですか？
            <%= link_to "ログイン", new_session_path, class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
