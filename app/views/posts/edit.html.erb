<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="mb-3">
      <%= link_to post_path(@post), class: "text-decoration-none" do %>
        <i class="bi bi-arrow-left"></i> 投稿詳細に戻る
      <% end %>
    </div>
    
    <h1 class="h2 mb-4">
      <i class="bi bi-pencil"></i> 投稿を編集
    </h1>

    <div class="card shadow-sm">
      <div class="card-body">
        <%= form_with model: @post, local: true, class: "needs-validation", novalidate: true do |f| %>
          <% if @post.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="mb-3">
            <%= f.label :title, "推しの名前", class: "form-label" %>
            <%= f.text_field :title, class: "form-control", placeholder: "例: 初音ミク", required: true %>
            <div class="invalid-feedback">
              推しの名前を入力してください
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :description, "魅力ポイント", class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 6, placeholder: "この推しの魅力を紹介してください...", required: true %>
            <div class="invalid-feedback">
              魅力ポイントを入力してください
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :image, "推し画像URL", class: "form-label" %>
            <%= f.url_field :image, class: "form-control", placeholder: "https://..." %>
            <div class="form-text">
              画像URLを指定してください（アップロードは後で実装予定）
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :youtube_url, "YouTube URL", class: "form-label" %>
            <%= f.url_field :youtube_url, class: "form-control", placeholder: "https://www.youtube.com/watch?v=..." %>
            <div class="form-text">
              関連するYouTube動画のURLを入力できます（任意）
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :category_ids, "カテゴリ", class: "form-label" %>
            <div class="form-text mb-2">
              該当するカテゴリを選択してください（複数選択可能）
            </div>
            <div class="row g-2">
              <% @categories.each do |category| %>
                <div class="col-md-6 col-lg-4">
                  <div class="form-check">
                    <%= f.check_box :category_ids, { multiple: true, checked: @post.category_ids.include?(category.id) }, category.id, nil %>
                    <%= f.label "category_ids_#{category.id}", category.name, class: "form-check-label" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "キャンセル", post_path(@post), class: "btn btn-outline-secondary" %>
            <%= f.submit "更新する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>