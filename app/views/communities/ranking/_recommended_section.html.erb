<% if recommended.present? %>
  <div class="card shadow-sm mb-4 border-primary">
    <div class="card-header bg-primary text-white">
      <h3 class="h5 mb-0">
        <i class="bi bi-star-fill"></i> おすすめコミュニティ
      </h3>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <% recommended.each_with_index do |community, index| %>
          <%= render 'communities/ranking/recommended_card', community: community, index: index %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>