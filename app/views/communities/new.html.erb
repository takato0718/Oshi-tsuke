<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="mb-4">
      <%= link_to communities_path, class: "text-decoration-none" do %>
        <i class="bi bi-arrow-left"></i> コミュニティ一覧に戻る
      <% end %>
    </div>

    <h1 class="h2 mb-4">
      <i class="bi bi-plus-circle"></i> コミュニティを作成
    </h1>

    <div class="card shadow-sm">
      <div class="card-body">
        <%= form_with model: @community, local: true, class: "needs-validation", novalidate: true do |f| %>
          <% if @community.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @community.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "コミュニティ名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "例: 初音ミク好きの集い", required: true, maxlength: 100 %>
            <div class="invalid-feedback">
              コミュニティ名を入力してください
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :description, "説明", class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "コミュニティの説明を入力してください...", maxlength: 1000 %>
          </div>

          <div class="mb-3">
            <div class="form-check">
              <%= f.check_box :is_public, class: "form-check-input", checked: true %>
              <%= f.label :is_public, "公開コミュニティにする", class: "form-check-label" %>
            </div>
            <div class="form-text">
              公開コミュニティは誰でも閲覧できますが、投稿はメンバーのみ可能です
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "キャンセル", communities_path, class: "btn btn-outline-secondary" %>
            <%= f.submit "作成する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrapのバリデーション
  (function() {
    'use strict';
    var forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach(function(form) {
      form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>

