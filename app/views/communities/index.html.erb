<div class="row">
  <div class="col-lg-10 mx-auto">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h2 mb-0">
        <i class="bi bi-people"></i> コミュニティ一覧
      </h1>
      <% if logged_in? %>
        <%= link_to new_community_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-circle"></i> コミュニティを作成
        <% end %>
      <% end %>
    </div>

    <% if @communities.blank? %>
      <div class="card shadow-sm">
        <div class="card-body text-center py-5">
          <i class="bi bi-inbox display-1 text-muted"></i>
          <h3 class="h5 mt-3 text-muted">まだコミュニティがありません</h3>
          <p class="text-muted mb-4">最初のコミュニティを作成してみましょう！</p>
          <% if logged_in? %>
            <%= link_to new_community_path, class: "btn btn-primary" do %>
              <i class="bi bi-plus-circle"></i> コミュニティを作成
            <% end %>
          <% else %>
            <%= link_to new_session_path, class: "btn btn-primary" do %>
              ログインしてコミュニティを作成
            <% end %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="row g-4">
        <% @communities.each do |community| %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-3">
                  <h5 class="card-title mb-0">
                    <%= link_to community_path(community), class: "text-decoration-none" do %>
                      <%= community.name %>
                    <% end %>
                  </h5>
                  <% unless community.public? %>
                    <span class="badge bg-secondary">
                      <i class="bi bi-lock"></i> 非公開
                    </span>
                  <% end %>
                </div>
                <p class="card-text text-muted flex-grow-1">
                  <%= truncate(community.description, length: 100) %>
                </p>
                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <small class="text-muted">
                    <i class="bi bi-person"></i> <%= community.members.count %>人
                  </small>
                  <small class="text-muted">
                    <i class="bi bi-person-circle"></i> <%= community.creator.name %>
                  </small>
                </div>
              </div>
              <div class="card-footer bg-white">
                <%= link_to community_path(community), class: "btn btn-sm btn-outline-primary w-100" do %>
                  <i class="bi bi-arrow-right"></i> 詳細を見る
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% if @communities.total_pages > 1 %>
        <div class="mt-4">
          <%= paginate @communities, theme: 'bootstrap4' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

