<div class="col-md-6 col-lg-4">
  <div class="card h-100 shadow-sm">
    <div class="card-body d-flex flex-column">
      <div class="d-flex justify-content-between align-items-start mb-3">
        <h5 class="card-title mb-0">
          <%= link_to community_path(community), class: "text-decoration-none" do %>
            <%= community.name %>
          <% end %>
        </h5>
        <% unless community.public? %>
          <span class="badge bg-secondary">
            <i class="bi bi-lock"></i> 非公開
          </span>
        <% end %>
      </div>
      <p class="card-text text-muted flex-grow-1">
        <%= truncate(community.description, length: 100) %>
      </p>
      <div class="d-flex justify-content-between align-items-center mt-auto">
        <small class="text-muted">
          <i class="bi bi-person"></i> <%= community.active_members.count %>人
        </small>
        <small class="text-muted">
          <i class="bi bi-person-circle"></i> <%= community.creator.name %>
        </small>
      </div>
    </div>
    <div class="card-footer bg-white">
      <%= link_to community_path(community), class: "btn btn-sm btn-outline-primary w-100" do %>
        <i class="bi bi-arrow-right"></i> 詳細を見る
      <% end %>
    </div>
  </div>
</div>
