<div class="card shadow-sm mb-4">
  <div class="card-header bg-info text-white">
    <h3 class="h5 mb-0">
      <i class="bi bi-gear"></i> コミュニティ管理
    </h3>
  </div>
  <div class="card-body">
    <div class="mb-3">
      <%= link_to reports_path(community_id: community.uuid), class: "btn btn-outline-primary" do %>
        <i class="bi bi-flag"></i> 報告一覧を見る
      <% end %>
    </div>
    
    <%= render 'communities/moderation/pending_members', 
               community: community, 
               pending_memberships: pending_memberships %>
    
    <% if is_admin %>
      <%= render 'communities/moderation/member_management', community: community %>
    <% end %>
  </div>
</div>
