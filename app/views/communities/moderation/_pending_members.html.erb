<% if pending_memberships&.any? %>
  <div class="mb-4">
    <h4 class="h6 mb-3">
      <i class="bi bi-hourglass-split"></i> 承認待ちメンバー
    </h4>
    <% pending_memberships.each do |membership| %>
      <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom">
        <div>
          <%= user_avatar_tag(membership.user, size: 32, class: "me-2") %>
          <strong><%= membership.user.name %></strong>
          <small class="text-muted ms-2">
            <i class="bi bi-clock"></i> <%= membership.created_at.strftime("%Y年%m月%d日") %>
          </small>
        </div>
        <div>
          <%= button_to approve_membership_community_moderation_path(community, membership), 
                        method: :patch, 
                        class: "btn btn-sm btn-success" do %>
            <i class="bi bi-check-circle"></i> 承認
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
