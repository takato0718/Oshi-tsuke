<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">
            <i class="bi bi-key"></i> 新しいパスワードを設定
          </h2>
          
          <%= form_with model: @user, url: password_reset_path(@token), method: :patch, local: true, class: "needs-validation", novalidate: true do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="mb-3">
              <%= f.label :password, "新しいパスワード", class: "form-label" %>
              <%= f.password_field :password, 
                  class: "form-control", 
                  placeholder: "6文字以上",
                  required: true,
                  minlength: 6,
                  autofocus: true %>
              <div class="invalid-feedback">
                パスワードを6文字以上で入力してください。
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
              <%= f.password_field :password_confirmation, 
                  class: "form-control", 
                  placeholder: "同じパスワードを入力",
                  required: true,
                  minlength: 6 %>
              <div class="invalid-feedback">
                パスワード（確認）を入力してください。
              </div>
            </div>
            
            <div class="d-grid gap-2">
              <%= f.submit "パスワードを変更", class: "btn btn-primary" %>
              <%= link_to "キャンセル", new_session_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

