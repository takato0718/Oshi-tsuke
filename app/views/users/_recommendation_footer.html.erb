<div class="d-flex justify-content-between align-items-center">
  <div>
    <% if recommendation.post.categories.any? %>
      <% recommendation.post.categories.each do |category| %>
        <span class="badge bg-primary me-1">
          <i class="bi bi-tag"></i> <%= category.name %>
        </span>
      <% end %>
    <% end %>
  </div>
  <%= link_to post_path(recommendation.post), class: "btn btn-sm btn-outline-primary" do %>
    <i class="bi bi-arrow-right"></i> 詳細を見る
  <% end %>
</div>
